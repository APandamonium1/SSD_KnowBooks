<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Books</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KnowBooks.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Books/Index">KnowBooks</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole("Owner") || User.IsInRole("Member") || User.IsInRole("Staff"))
                        {
                            <a class="nav-link text-dark" asp-area="" asp-page="/Books/Index">Books</a>
                        }
                        @if (User.IsInRole("Owner") || User.IsInRole("Member") || User.IsInRole("Staff"))
                        {
                            <a class="nav-link text-dark" asp-area="" asp-page="/Reviews/Index">Reviews</a>
                        }
                        @if (User.IsInRole("Owner") || User.IsInRole("Admin"))
                        {
                            <a class="nav-link text-dark" asp-area="" asp-page="/Roles/Index">Roles</a>
                        }
                        @if (User.IsInRole("Member"))
                        {
                            <a class="nav-link text-dark" asp-area="" asp-page="/YourBooks/Index">Your Books</a>
                        }
                        @if (User.IsInRole("Owner") || User.IsInRole("Admin") || User.IsInRole("Staff"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-page="/Audit/Index">Audit Log</a>
                            }
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - KnowBooks - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>