@page
@model KnowBooks.Pages.YourBooks.IndexModel

@{
    ViewData["Title"] = "Your Books";
}

<h1>Your Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Genre)
            </th>
            <th>
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Book) {
    @if (item.Borrower.Equals(User.Identity.Name)) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        <a asp-page="./Return" asp-route-id="@item.ISBN">Return</a>
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ISBN">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ISBN">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ISBN">Delete</a>
                    </td>
                </tr>
    }
}
    </tbody>
</table>
