@page
@model KnowBooks.Pages.Books.LoanModel

@{
    ViewData["Title"] = "Loan";
}

<h1>Loan a book</h1>

<h4>@Model.Book.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Book.ISBN" />
            <div class="form-group">
                <input asp-for="Book.Title" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="Book.Author" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="Book.Genre" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="Book.AvailabilityStatus" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="Book.Borrower" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Loan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
